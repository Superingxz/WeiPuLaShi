<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    </style>

    <style name="et_login_registered">
         <item name="android:textColorHint">@color/et_login_hint</item>
        <item name="android:textColor">@color/et_login_text</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="et_darkblue_bg">
        <item name="android:textColorHint">@color/text_et_darkblue_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/shape_et_blue_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="et_darkblue_bg_noright" parent="et_darkblue_bg">
        <item name="android:background">@drawable/shape_et_blue_noright_bg</item>
    </style>

    <style name="btn_blue_bg">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/shape_btn_blue_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="btn_half_corner">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_btn_halfcorner</item>
        <item name="android:textSize">@dimen/normal</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="dialog_no_title">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
    </style>
    <style name="dialog_no_bg_title">
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="btn_blue_noleft_bg">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/shape_btn_blue__noleft_bg</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="et_gray_stroke">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textSeacond</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">@dimen/normal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/shape_gray_stroke</item>
    </style>

</resources>
