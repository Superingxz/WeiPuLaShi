<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sign_info"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.xolo.weipulashi.ui.activity.SignInfoActivity">

    <com.xolo.weipulashi.ui.view.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtitle="会员兑换记录详情"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员真实名称："
                android:textColor="@color/text_dark_white"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员手机："
                android:textColor="@color/text_dark_white"
                />
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机构名称："
                android:textColor="@color/text_dark_white"
                />
            <TextView
                android:id="@+id/tv_jiGou"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换日期："
                android:textColor="@color/text_dark_white"
                />
            <TextView
                android:id="@+id/tv_WorkDate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="花费分值："
                android:textColor="@color/text_dark_white"
                />
            <TextView
                android:id="@+id/tv_ToTalIntegralValue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="兑换明细"
        android:background="@color/bg_gray"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/tv_number"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/medium"
                android:gravity="center"
                android:layout_centerVertical="true"
                />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_toRightOf="@id/tv_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品编号:"
                    android:textColor="@color/textSeacond"
                    android:textSize="@dimen/small"
                    />
                <TextView
                    android:id="@+id/tv_ProductCode"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/small"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_below="@id/ll"
                android:layout_toRightOf="@id/tv_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品名称:"
                    android:textColor="@color/textSeacond"
                    android:textSize="@dimen/small"
                    />
                <TextView
                    android:id="@+id/tv_ProductName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/small"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/ll_2"
                android:layout_toRightOf="@id/tv_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兑换分值:"
                    android:textColor="@color/textSeacond"
                    android:textSize="@dimen/small"
                    />
                <TextView
                    android:id="@+id/tv_Integral"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/small"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兑换数量:"
                    android:textColor="@color/textSeacond"
                    android:textSize="@dimen/small"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/tv_qty"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/small"
                    />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/textSeacond"
            />

    </LinearLayout>

</LinearLayout>
