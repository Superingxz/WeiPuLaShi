<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_md_registered"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_register_gray"
    tools:context="com.xolo.weipulashi.ui.activity.Store.MdRegisteredActivity">

    <com.xolo.weipulashi.ui.view.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtitle="协助会员注册"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/md_xz_zuce"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        />

    <EditText
        android:id="@+id/et_phone"
        style="@style/et_gray_stroke"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:hint="手机号码"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/et_password"
        style="@style/et_gray_stroke"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:hint="密码"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/et_comfirn_password"
        style="@style/et_gray_stroke"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:hint="确定密码"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/btn_registered"
        style="@style/btn_blue_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:text="注册"
        />

</LinearLayout>
