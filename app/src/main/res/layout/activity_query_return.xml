<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_query_out"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.xolo.weipulashi.ui.activity.JingXiaoShang.QueryOutActivity">

    <com.xolo.weipulashi.ui.view.TitleView
        android:id="@+id/mTitleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtitle="门店退货明细查询"
        />

    <EditText
        android:id="@+id/et_saleCode"
        style="@style/et_darkblue_bg"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:hint="退货单号"
        />

    <EditText
        android:id="@+id/et_StoreNam"
        style="@style/et_darkblue_bg"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:hint="门店名称"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_start_time"
            style="@style/et_darkblue_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="开始时间"
            />
        <View
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:background="@color/dividi"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/tv_end_time"
            style="@style/et_darkblue_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="结束时间"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/mListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        />

</LinearLayout>
